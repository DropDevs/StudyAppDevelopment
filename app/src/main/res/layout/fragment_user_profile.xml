<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/profile_cover_photo_image_view"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/mylogo"
                android:scaleType="centerCrop"/>
            <ProgressBar
                android:id="@+id/profile_cover_photo_pro_bar"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="visible"/>
            <ImageView
                android:id="@+id/profile_edit_cover_image_view"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/editcoverimage"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"/>
            <ImageView
                android:id="@+id/profile_user_image_imgView"
                android:layout_width="80dp"
                android:layout_below="@+id/profile_cover_photo_image_view"
                android:layout_marginTop="-50dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"/>
        </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                android:id="@+id/profile_user_name_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="25sp"
                android:text="User Name"
                android:fontFamily="@font/aref_ruqaa"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/profile_user_college_name_text_view"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="College Name"
                android:textSize="20sp"
                android:fontFamily="@font/aref_ruqaa"
                android:textColor="#000000"/>
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:id="@+id/profile_message_linear_layout"
            android:orientation="vertical">
            <!--<Button-->
                <!--android:id="@+id/profile_message_to_user_button"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:textSize="20sp"-->
                <!--android:fontFamily="@font/aref_ruqaa"-->
                <!--android:text="Message"/>-->
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:id="@+id/profile_user_bio_linear_layout">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/profile_user_bio_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User Bio"
                android:textSize="20sp"
                android:fontFamily="@font/aref_ruqaa"
                android:textColor="#000000"
                android:padding="5dp"/>
            </ScrollView>
        </LinearLayout>

            <LinearLayout
                android:id="@+id/user_details_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/profile_user_branch_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="User Branch"
                        android:fontFamily="@font/aref_ruqaa"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/profile_user_div_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="User Division"
                        android:textColor="#000000"
                        android:fontFamily="@font/aref_ruqaa"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/profile_user_roll_no_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="User Roll no"
                        android:textColor="#000000"
                        android:fontFamily="@font/aref_ruqaa"
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:gravity="bottom"
            android:layout_weight="1"
            android:id="@+id/profile_edit_details_layout">

            <Button
                android:id="@+id/profile_edit_user_details_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="20sp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/my_button_two"
                android:fontFamily="@font/aref_ruqaa"
                android:text="Edit Details"/>
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</android.support.v7.widget.LinearLayoutCompat>