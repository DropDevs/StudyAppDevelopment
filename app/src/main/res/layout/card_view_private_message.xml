<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:maxWidth="200dp"
    android:layout_alignParentEnd="true"
    android:orientation="vertical"
    android:layout_marginStart="13dp"
    android:layout_marginTop="5dp"
    android:id="@+id/friends_message_card_view"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/friends_message_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_gravity="end"
        android:padding="2dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/friends_message_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Friends message"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textAllCaps="false"/>
    </LinearLayout>

</android.support.v7.widget.CardView>