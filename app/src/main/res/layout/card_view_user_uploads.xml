<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:padding="10dp"
    app:cardCornerRadius="10dp"
    android:id="@+id/user_uploads_as_card_view"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:elevation="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/as_uploader_image_view"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/signout"
                android:contentDescription="uploader_image" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/as_uploader_name_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/aref_ruqaa"
                        android:text="User Name"
                        android:textColor="#40C4FF"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:typeface="monospace" />
                    <TextView
                        android:id="@+id/as_branch_name_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/aref_ruqaa"
                        android:text="Branch"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_weight="2"
                        android:typeface="monospace" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:fontFamily="@font/aref_ruqaa"
                    android:text="Div"
                    android:textColor="#BDBDBD"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:typeface="monospace" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:fontFamily="@font/aref_ruqaa"
                    android:text="Subject"
                    android:textColor="#BDBDBD"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:typeface="monospace" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/as_division_name_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/aref_ruqaa"
                    android:text="Division Name"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:typeface="monospace" />

                <TextView
                    android:id="@+id/as_subject_name_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/aref_ruqaa"
                    android:text="Subject Name"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:typeface="monospace" />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/home_like_image_view"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:src="@drawable/like"
                android:contentDescription="Like"/>
            <TextView
                android:id="@+id/home_comment_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Comment"
                android:textAlignment="center"
                android:textColor="#BDBDBD"
                android:padding="5dp"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:textSize="15sp"
                android:fontFamily="@font/aref_ruqaa"/>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>