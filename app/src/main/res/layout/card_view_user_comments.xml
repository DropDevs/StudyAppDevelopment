<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
            <ImageView
                android:id="@+id/card_comment_user_image_view"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/signout"
                android:layout_margin="5dp"/>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#E0E0E0"
            app:cardCornerRadius="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                android:id="@+id/card_comment_user_name_text_view"
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:fontFamily="@font/aref_ruqaa"
                android:textSize="20sp"
                android:text="User name"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="#000000"
                android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/card_comment_user_comment_text_view"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:fontFamily="@font/aref_ruqaa"
            android:textSize="15sp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"            android:textColor="#000000"
            android:text="User comment"
            android:layout_height="wrap_content" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.LinearLayoutCompat>